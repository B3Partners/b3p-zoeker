<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>	
    <class name="nl.b3p.zoeker.configuratie.Bron" table="bron">
        <id name="id">
            <column name="id" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">bron_id_seq</param>
            </generator>
        </id>
        <property name="naam"/>
        <property name="url"/>
        <property name="gebruikersnaam"/>
        <property name="wachtwoord"/>
        <property name="volgorde"/>
    </class>
    <class name="nl.b3p.zoeker.configuratie.ZoekAttribuut" table="zoekveld">
        <id name="id">
            <column name="id" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">zoekveld_id_seq</param>
            </generator>
        </id>
        <property name="naam"/>
        <property name="label"/>
        <property name="attribuutnaam"/>
        <property name="type" column="soort"/>
        <property name="volgorde"/>
        <many-to-one class="nl.b3p.zoeker.configuratie.ZoekConfiguratie" name="zoekConfiguratie" column="zoekconfiguratie" />
        <property name="inputtype"/>
        <property name="inputsize"/>
        <many-to-one class="nl.b3p.zoeker.configuratie.ZoekConfiguratie" name="inputzoekconfiguratie" column="inputzoekconfiguratie" />
        <property name="dropDownValues" column="dropdown_values" />
        <property name="omschrijving" type="materialized_clob"/>
    </class>
    <class name="nl.b3p.zoeker.configuratie.ResultaatAttribuut" table="resultaatveld">
        <id name="id">
            <column name="id" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">resultaatveld_id_seq</param>
            </generator>
        </id>
        <property name="naam"/>
        <property name="label"/>
        <property name="volgorde"/>
        <property name="attribuutnaam"/>
        <property name="type" column="soort"/>
        <many-to-one class="nl.b3p.zoeker.configuratie.ZoekConfiguratie" name="zoekConfiguratie" column="zoekconfiguratie" />
        <property name="omschrijving" type="materialized_clob"/>
    </class>
    <class name="nl.b3p.zoeker.configuratie.ZoekConfiguratie" table="zoekconfiguratie">
        <id name="id">
            <column name="id" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">zoekconfiguratie_id_seq</param>
            </generator>
        </id>
        <property name="naam"/>
        <property name="resultListDynamic" column="resultlistdynamic"/>
        <property column="featuretype" name="featureType"/>
        <set name="zoekVelden" cascade="all-delete-orphan" order-by="volgorde">
            <key column="zoekconfiguratie"/>
            <one-to-many class="nl.b3p.zoeker.configuratie.ZoekAttribuut"/>
        </set>
        <set name="resultaatVelden" cascade="all-delete-orphan" order-by="volgorde">
            <key column="zoekconfiguratie"/>
            <one-to-many class="nl.b3p.zoeker.configuratie.ResultaatAttribuut"/>
        </set>
        <many-to-one class="nl.b3p.zoeker.configuratie.Bron" column="parentbron" name="parentBron"/>
        <many-to-one class="nl.b3p.zoeker.configuratie.ZoekConfiguratie" column="parentzoekconfiguratie" name="parentZoekConfiguratie"/>
        <property name="omschrijving" type="materialized_clob"/>
    </class>
</hibernate-mapping>